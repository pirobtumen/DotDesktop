<DotDesktop>:
	txt_input_name: file_name
	txt_input_path: file_path
	txt_input_icon: file_icon
	txt_input_exec: file_exec
	txt_input_comment: file_comment
	
	resizable: (None,None)
	
	BoxLayout:
		orientation: 'vertical'
		spacing: 10
		padding: 7
		
		BoxLayout:
			spacing: 15
			Label:
				size_hint: (0,1)
				size: (85,0)
				text: "File:"
			TextInput:
				size_hint: (0,1)
				size: (300,0)
				id: file_path

		BoxLayout:
			spacing: 15
			Label:
				size_hint: (0,1)
				size: (85,0)
				text: "Name:"
			TextInput:
				size_hint: (0,1)
				size: (300,0)
				id: file_name
		
		BoxLayout:
			spacing: 15
			Label:
				size_hint: (0,1)
				size: (85,0)
				text: "Commentary:"
			TextInput:
				size_hint: (0,1)
				size: (300,0)
				id: file_comment
		
		BoxLayout:
			spacing: 15
			Label:
				size_hint: (0,1)
				size: (85,0)
				text: "Icon:"
			TextInput:
				size_hint: (0,1)
				size: (300,0)
				id: file_icon
			Button:
				size_hint: (0,1)
				text: "Search"
				on_release: root.select_file( file_icon )
				
		BoxLayout:
			spacing: 15
			Label:
				size_hint: (0,1)
				size: (85,0)
				text: "Executable:"
			TextInput:
				size_hint: (0,1)
				size: (300,0)
				id: file_exec
			Button:
				size_hint: (0,1)
				text: "Search"
				on_release: root.select_file( file_exec )

		BoxLayout:
			BoxLayout:
				size_hint: (0.58,1)
			BoxLayout:
				size_hint: (0.42,1)
				spacing: 10
				Button:
					size_hint: (0,1)
					id: open_file
					text: "Open"
					on_release: root.open_file()
				Button:
					size_hint: (0,1)
					id: new_file
					text: "Save"
					on_release: root.check_before_save( new_file )